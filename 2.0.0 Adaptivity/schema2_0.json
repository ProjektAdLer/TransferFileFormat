{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for ATF 2.0.0",
  "type": "object",
  "properties": {
    "$type": {
      "type": "string"
    },
    "fileVersion": {
      "type": "string"
    },
    "amgVersion": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "world": {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string"
        },
        "worldName": {
          "type": "string"
        },
        "worldUUID": {
          "type": "string"
        },
        "worldDescription": {
          "type": "string"
        },
        "worldGoals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "evaluationLink": {
          "type": "string"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "$type": {
                "type": "string"
              },
              "topicId": {
                "type": "number"
              },
              "topicName": {
                "type": "string"
              },
              "topicContents": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              }
            },
            "required": ["$type", "topicId", "topicName", "topicContents"]
          }
        },
        "spaces": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "$type": {
                "type": "string"
              },
              "spaceId": {
                "type": "number"
              },
              "spaceUUID": {
                "type": "string"
              },
              "spaceName": {
                "type": "string"
              },
              "spaceDescription": {
                "type": "string"
              },
              "spaceGoals": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "spaceSlotContents": {
                "type": "array",
                "items": {
                  "type": "number"
                }
              },
              "requiredPointsToComplete": {
                "type": "number"
              },
              "requiredSpacesToEnter": {
                "type": "string"
              },
              "spaceTemplate": {
                "type": "string"
              },
              "spaceTemplateStyle": {
                "type": "string"
              }
            },
            "required": [
              "$type",
              "spaceId",
              "spaceUUID",
              "spaceName",
              "spaceDescription",
              "spaceGoals",
              "spaceSlotContents",
              "requiredPointsToComplete",
              "requiredSpacesToEnter",
              "spaceTemplate",
              "spaceTemplateStyle"
            ]
          }
        },
        "elements": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "$type": {
                "type": "string"
              },
              "elementId": {
                "type": "number"
              },
              "elementUUID": {
                "type": "string"
              },
              "elementName": {
                "type": "string"
              },
              "elementDescription": {
                "type": "string"
              },
              "elementGoals": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "elementCategory": {
                "type": "string"
              },
              "elementFileType": {
                "type": "string"
              },
              "elementMaxScore": {
                "type": "number"
              },
              "elementModel": {
                "type": "string"
              },
              "adaptivityContent": {
                "type": "object",
                "properties": {
                  "$type": {
                    "type": "string"
                  },
                  "introText": {
                    "type": "string"
                  },
                  "adaptivityTasks": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "$type": {
                          "type": "string"
                        },
                        "taskId": {
                          "type": "number"
                        },
                        "taskUuid": {
                          "type": "string"
                        },
                        "taskName": {
                          "type": "string"
                        },
                        "optional": {
                          "type": "boolean"
                        },
                        "minimumRequiredDifficulty": {
                          "type": "number"
                        },
                        "adaptivityQuestions": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "$type": {
                                "type": "string"
                              },
                              "questionType": {
                                "type": "string"
                              },
                              "questionId": {
                                "type": "number"
                              },
                              "questionUuid": {
                                "type": "string"
                              },
                              "questionDifficulty": {
                                "type": "number"
                              },
                              "questionText": {
                                "type": "string"
                              },
                              "adaptivityRules": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "$type": {
                                      "type": "string"
                                    },
                                    "triggerId": {
                                      "type": "number"
                                    },
                                    "triggerCondition": {
                                      "type": "string"
                                    },
                                    "adaptivityAction": {
                                      "type": "object",
                                      "properties": {
                                        "$type": {
                                          "type": "string"
                                        },
                                        "commentText": {
                                          "type": "string"
                                        },
                                        "ElementId": {
                                          "type": "number"
                                        },
                                        "hintText": {
                                          "type": "string"
                                        }
                                      },
                                      "required": ["$type"]
                                    }
                                  },
                                  "required": ["$type", "triggerId", "triggerCondition", "adaptivityAction"]
                                }
                              },
                              "choices": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "$type": {
                                      "type": "string"
                                    },
                                    "answerText": {
                                      "type": "string"
                                    }
                                  },
                                  "required": ["$type", "answerText"]
                                }
                              }
                            },
                            "required": [
                              "$type",
                              "questionType",
                              "questionId",
                              "questionUuid",
                              "questionDifficulty",
                              "questionText",
                              "adaptivityRules",
                              "choices"
                            ]
                          }
                        }
                      },
                      "required": [
                        "$type",
                        "taskId",
                        "taskUuid",
                        "taskName",
                        "optional",
                        "minimumRequiredDifficulty",
                        "adaptivityQuestions"
                      ]
                    }
                  }
                },
                "required": ["$type", "introText", "adaptivityTasks"]
              }
            },
            "required": ["$type", "elementId", "elementUUID", "elementName", "elementCategory", "elementFileType"]
          }
        }
      },
      "required": [
        "$type",
        "worldName",
        "worldUUID",
        "worldDescription",
        "worldGoals",
        "evaluationLink",
        "topics",
        "spaces",
        "elements"
      ]
    }
  },
  "required": ["$type", "fileVersion", "amgVersion", "author", "language", "world"]
}
